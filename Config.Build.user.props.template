  </PropertyGroup>

  <Target Name="DeployFiles" AfterTargets="Build">
    <Message Text="Deploy â†’ $(BongoCatPluginsDir)$(AssemblyName).dll" Importance="High" />
    <Error
      Text="Plugins directory '$([MSBuild]::NormalizeDirectory($(BongoCatPluginsDir)))' doesn't exist! Configure BongoCatPluginsDir to point to a valid path in the Config.Build.user.props file."
